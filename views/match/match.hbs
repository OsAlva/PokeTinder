<h1>Match Page</h1>
<br>
<h2>{{loged}}</h2>
<br>
    {{#if usersExists}}
    {{#each users}}
<div class="containerBgImg w-5 h-5" style="background-image: url({{img}});">
    <form action="/match" method="POST">
    {{!-- {{this}} --}}
    <h3>{{username}}</h3>
    <br>
        <input type="hidden" name="yes" value="{{_id}}">
        {{!-- <input type="hidden" name="userId" value={{_id}}> --}}
        <button type="submit">YES</button>
    </form>
    <form action="/match" method="POST">
        <input type="hidden" name="no" value="{{_id}}">
        <button type="submit">NO</button>
    </form>
    {{/each}}
    {{else}}
    <h1>Theres no users left</h1>
    {{/if }}
</div>