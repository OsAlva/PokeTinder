<h2 class="encabezamientos">MY PROFILE</h2>

{{#with user}}
<div class="containerFlex">
  <div class="containerProfileImg" style="background-image: url({{img}});"></div>
    <div class="registerForm mt-5">
  
        <div class="mb-3">
            <p class="form-label text-white fw-bold fs-1 m-1 mb-2">Username</p>
            <label class="text-warning fw-bold fs-3 m-1 mb-2 font-monospace">{{username}}</label>
        </div>

        <div class="mb-3">
            <p class="form-label text-white fw-bold fs-1 m-1 mb-2">Age</p>
            <label class="text-warning fw-bold fs-3 m-1 mb-2 font-monospace">{{edad}}</label>
        </div>

        <div class="mb-3">
            <p class="form-label text-white fw-bold fs-1 m-1 mb-2">Gender</p>
            <label class="text-warning fw-bold fs-3 m-1 mb-2 font-monospace">{{gender}}</label>
        </div>

        <form action="/profile" method="POST">
            <div class="mb-3">
                <input type="hidden" name="edit" value="{{_id}}">
                <button type="submit" class="btn btn-primary">Edit</button>
            </div>
        </form>

    </div>
</div>

{{/with}}

    